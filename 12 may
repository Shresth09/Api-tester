<build>
  <plugins>
    <!-- Other plugin configurations -->

    <plugin>
      <groupId>org.apache.felix</groupId>
      <artifactId>maven-bundle-plugin</artifactId>
      <version>4.2.1</version>
      <extensions>true</extensions>
      <configuration>
        <instructions>
          <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
          <Bundle-Version>${project.version}</Bundle-Version>
          <!-- Import all spring packages necessary for dynamic proxies -->
          <Import-Package>
              org.springframework.core*;resolution:=optional,
              org.springframework.aop*;resolution:=optional,
              org.eclipse.gemini.blueprint.context.support*;resolution:=optional,
              *
          </Import-Package>
        </instructions>
      </configuration>
    </plugin>
  </plugins>
</build>