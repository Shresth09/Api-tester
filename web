<!DOCTYPE html>
<html>
<head>
    <title>Hello World Popup</title>
    <style>
        #hello-world-popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div id="hello-world-popup">
        <h1>Hello World!</h1>
        <p>This is a popup window.</p>
    </div>
</body>
</html>






AJS.$document.ready(function() {
    // Find the link element by ID
    var link = AJS.$('#hello-world-link');

    // Add click event handler to the link
    link.on('click', function(e) {
        e.preventDefault(); // Prevent default link behavior

        // Create the popup container element
        var popupContainer = AJS.$('<div id="hello-world-popup"></div>');

        // Append the popup content to the container
        popupContainer.append('<h1>Hello World!</h1><p>This is a popup window.</p>');

        // Add CSS styles to the popup container
        popupContainer.css({
            position: 'fixed',
            top: '50%',
            left: '50%',
            transform: 'translate(-50%, -50%)',
            background: 'white',
            padding: '20px',
            border: '1px solid #ccc',
            boxShadow: '0 0 5px rgba(0, 0, 0, 0.3)',
            zIndex: '9999'
        });

        // Add a close button to the popup
        var closeButton = AJS.$('<button>Close</button>');
        closeButton.on('click', function() {
            popupContainer.remove();
        });
        popupContainer.append(closeButton);

        // Append the popup container to the body
        AJS.$('body').append(popupContainer);
    });
});

