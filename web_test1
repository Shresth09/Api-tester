<div>
    <button id="walkme-button">Show Issue Description</button>

    <script>
        AJS.$("#walkme-button").on("click", function() {
            var issueKey = AJS.context().issueKey;
            var apiUrl = "YOUR_API_URL"; // Replace with your actual API URL

            var payload = {
                "user_story": "$!issue.description"
            };

            AJS.$.ajax({
                url: apiUrl,
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(payload),
                success: function(response) {
                    AJS.$("#issue-description").text(response.message || response);
                    AJS.dialog2("#walkme-modal").show();
                },
                error: function(xhr, status, error) {
                    console.error("Error sending request:", error);
                    alert("Error sending request. Please try again later.");
                }
            });
        });

        // ... (rest of the JavaScript code for the modal, as shown in your previous response)
    </script>
</div>

<div id="walkme-modal" class="aui-dialog2 aui-dialog2-medium aui-dialog2-centered" role="dialog" aria-hidden="true" style="display:none;">
    <header class="aui-dialog2-header">
        <h2 class="aui-dialog2-header-main">Issue Description</h2>
        <a class="aui-dialog2-header-close">
            <span class="aui-icon aui-icon-small aui-iconfont-close-dialog">Close</span>
        </a>
    </header>
    <div class="aui-dialog2-content">
        <p id="issue-description"></p>
    </div>
    <footer class="aui-dialog2-footer">
        <div class="aui-dialog2-footer-actions">
            <button id="close-button" class="aui-button aui-button-primary">Close</button>
        </div>
    </footer>
</div>
