<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Selection</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .search-field {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 15px;
        }
        .project-list {
            max-height: 200px;
            overflow-y: auto;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h4>Select Project:</h4>
        <input type="text" id="projectSearch" class="search-field" placeholder="Search projects...">
        <div id="projectList" class="project-list">
            <!-- Checkboxes will be populated dynamically -->
        </div>
    </div>
    <script>
        let allProjects = [];
        let selectedProjects = new Set();

        function fetchProjects() {
            // Example projects for demonstration
            allProjects = ["PROJ-Project A", "PROJ-Project B", "PROJ-Project C", "PROJ-Project D"];
            updateProjectList();
        }

        function updateProjectList(filter = '') {
            const projectList = document.getElementById('projectList');
            projectList.innerHTML = '';
            const filteredProjects = allProjects.filter(project => project.toLowerCase().includes(filter.toLowerCase()));
            filteredProjects.forEach(project => {
                const [key, name] = project.split("-");
                const label = document.createElement('label');
                label.innerHTML = `<input type="checkbox" value="${key}"> ${key} - ${name}`;
                if (selectedProjects.has(key)) {
                    label.querySelector('input[type="checkbox"]').checked = true;
                }
                label.querySelector('input[type="checkbox"]').addEventListener('change', function() {
                    if (this.checked) {
                        selectedProjects.add(key);
                    } else {
                        selectedProjects.delete(key);
                    }
                });
                projectList.appendChild(label);
                projectList.appendChild(document.createElement('br'));
            });
        }

        document.getElementById('projectSearch').addEventListener('input', function () {
            const filter = this.value.toLowerCase();
            updateProjectList(filter);
        });

        document.addEventListener("DOMContentLoaded", fetchProjects);
    </script>
</body>
</html>