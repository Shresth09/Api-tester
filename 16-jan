  <script>
    const projectListElement = document.getElementById('projectList');
    const searchInput = document.getElementById('projectSearch');
    let selectedProjects = []; 

    fetchProjects();
    fetchSelectedProjects();

    function fetchProjects() {
      const xhr = new XMLHttpRequest();
      xhr.open('GET', '/jira/plugins/servlet/issuecrud?action=getProjects');
      xhr.onload = function() {
        if (xhr.status === 200) {
          try {
            const projectData = xhr.responseText.trim().split(','); 
            if (projectData.length > 0) { 
              updateProjectList(projectData);
            } else {
              console.error('No projects received from the server.');
            }
          } catch (error) {
            console.error('Error parsing project data:', error);
          }
        } else {
          console.error('Error fetching projects:', xhr.statusText);
        }
      };
      xhr.send();
    }

    // ... (rest of the code remains the same)

  </script>
