<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Selection</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    .container {
      max-width: 500px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .search-bar {
      margin-bottom: 15px;
    }
    .project-list {
      max-height: 200px;
      overflow-y: auto;
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
    }
    .project-label {
      display: flex;
      align-items: center;
    }
    .project-checkbox {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Select Projects</h2>
    <div class="search-bar">
      <input type="text" id="projectSearch" class="search-field" placeholder="Search projects...">
    </div>
    <div class="project-list" id="projectList"></div>
    <button onclick="applySelection()">Apply</button>
  </div>

  <script>
    const projectListElement = document.getElementById('projectList');
    const searchInput = document.getElementById('projectSearch');
    const selectedProjects = new Set();

    fetchProjects();
    fetchSelectedProjects();

    function fetchProjects() {
      const xhr = new XMLHttpRequest();
      xhr.open('GET', '/jira/plugins/servlet/issuecrud?action=getProjects');
      xhr.onload = function() {
        if (xhr.status === 200) {
          const projectData = xhr.responseText.split(',');
          updateProjectList(projectData);
        } else {
          console.error('Error fetching projects:', xhr.statusText);
        }
      };
      xhr.send();
    }

    function fetchSelectedProjects() {
      const xhr = new XMLHttpRequest();
      xhr.open('GET', '/jira/plugins/servlet/issuecrud?action=getSelectedProjects');
      xhr.onload = function() {
        if (xhr.status === 200) {
          const selectedData = xhr.responseText.split(',');
          selectedData.forEach(projectKey => selectedProjects.add(projectKey));
          updateProjectList(); // Refresh project list to show selected projects
        } else {
          console.error('Error fetching selected projects:', xhr.statusText);
        }
      };
      xhr.send();
    }

    function updateProjectList(projects = allProjects) {
      projectListElement.innerHTML = '';
      projects.forEach(project => {
        const [key, name] = project.split(' ');
        const projectLabel = document.createElement('label');
        projectLabel.classList.add('project-label');
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.classList.add('project-checkbox');
        checkbox.value = key;
        if (selectedProjects.has(key)) {
          checkbox.checked = true;
        }
        checkbox.addEventListener('change', function() {
          if (this.checked) {
            selectedProjects.add(key);
          } else {
            selectedProjects.delete(key);
          }
        });
        const projectName = document.createTextNode(name + ' (' + key + ')');
        projectLabel.appendChild(checkbox);
        projectLabel.appendChild(projectName);
        projectListElement.appendChild(projectLabel);
        projectListElement.appendChild(document.createElement('br'));
      });
    }

    function getSelectedProjects() {
      const selectedProjectsArray = Array.from(selectedProjects);
      return selectedProjectsArray.join(',');
    }

    function applySelection() {
      const selectedProjectKeys = getSelectedProjects();
      const xhr = new XMLHttpRequest();
      xhr.open('POST', '/jira/plugins/servlet/issuecrud?action=applySelection');
      xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
      xhr.onload = function() {
        if (xhr.status === 200) {
          console.log('Projects applied successfully!');
        } else {
          console.error('Error applying selection:', xhr.statusText);
        }
      };
      xhr.send(`keys=${selectedProjectKeys}`);
    }

    searchInput.addEventListener('input', function() {
      const filter = this.value.toLowerCase();
      const filteredProjects = allProjects.filter(project => {
        const [key, name] = project.split(' ');
        return key.toLowerCase().includes(filter) || name.toLowerCase().includes(filter);
      });
      updateProjectList(filteredProjects);
    });
  </script>
</body>
</html>