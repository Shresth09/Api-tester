<!DOCTYPE html>
<html>
<head>
    <title>Keep Screen Awake</title>
</head>
<body>
    <h1>Screen Awake Tool</h1>
    <p>This page will keep your screen awake as long as it is open in the browser.</p>

    <script>
        let interval;

        function keepAwake() {
            interval = setInterval(() => {
                const event = new MouseEvent('mousemove', {
                    view: window,
                    bubbles: true,
                    cancelable: true
                });
                document.dispatchEvent(event);
            }, 30000); // Moves mouse every 30 seconds
        }

        function stopAwake() {
            clearInterval(interval);
        }

        // Start keeping the screen awake when the page loads
        keepAwake();

        // Stop the process if needed (you can create a button for this)
        window.onbeforeunload = stopAwake;
    </script>
</body>
</html>